<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="https://maps.googleapis.com/maps/api/js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>    

    <script src="~/Scripts/SiteScripts/SiteScript.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="site-content">
        <div id="logo-type">
            <img src="~/Images/Shared/site-logotype.png" />
        </div>
        <div class="navbar navbar-default navbar-top-margin">
            <div class="container">

                <div class="logout-container">
                    @if (Session["loggedInUser"] != null)
                    {
                        @Html.Label(Session["currentUsername"].ToString());
                        @Html.ActionLink("Logga ut", "UserLogOut", "Account");
                    }
                </div>

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @if (Session["loggedInUser"] == null)
                    {
                        @Html.ActionLink("Hem", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        @Html.ActionLink("Logga in", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })
                    }
                    else
                    {
                        @Html.ActionLink("Alla recensioner", "AllReviews", "Review", new { area = "" }, new { @class = "navbar-brand" })
                        @Html.ActionLink("Din sida", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })
                        @Html.ActionLink("Dina recensioner", "Index", "Review", new { area = "" }, new { @class = "navbar-brand" })

                        <div>
                            Sök efter användare:
                            <input type="text" id="tbUserSearch" />
                            <input type="submit" id="btnUserSearch" class="btn btn-primary" value="Sök" />
                        </div>
                    }
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav"></ul>
                </div>
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer class="footer-content">
                <h4>Kontaktinformation:</h4>
                <p>Insta-review AB - Kontaktperson: Per Östlin - Telefon: 070-234 234 12 </p>
                <p>&copy; @DateTime.Now.Year - Insta-review AB.</p>
            </footer>
        </div>
    </div>    
</body>
</html>